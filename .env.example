# Prompt Enhancer MCP Server Environment Configuration
# Copy this file to .env and configure with your actual values

# Required: At least one LLM provider API key
GOOGLE_API_KEY=your_google_api_key_here

# Optional: Additional LLM providers
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional: Server configuration
LOG_LEVEL=info
NODE_ENV=production

# Optional: Cache configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Optional: Cost and performance settings
DEFAULT_COST_LIMIT=0.10
DEFAULT_ENHANCEMENT_LEVEL=detailed
MAX_CONCURRENT_REQUESTS=10

# Example custom provider configurations (uncomment and configure as needed)
# CUSTOM_PROVIDER_ENDPOINT=https://your-custom-llm-endpoint.com
# CUSTOM_PROVIDER_API_KEY=your_custom_provider_key